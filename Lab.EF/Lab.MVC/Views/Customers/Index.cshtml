@model List<Lab.MVC.Models.CustomersView>

@{
    ViewBag.Title = "Customers Page";
}
<div class="container">

    <div class="row">
        <div class="col-md-12">
            <br />
            <button class="btn btn-dark">
                @Html.ActionLink("AGREGAR CLIENTE", "Insert", "Customers")
            </button>
            <button class="btn btn-dark">
                @Html.ActionLink("MODIFICAR CLIENTE", "Update", "Customers")
            </button>
        </div>
    </div>
    <br />

    <div id="deleteSuccessAlert" class="alert alert-success" style="display: none;">
        Cliente eliminado con éxito.
    </div>
    <div id="deleteErrorAlert" class="alert alert-danger" style="display: none;">
        Error al eliminar el cliente.
    </div>

    <div class="row">
        <div class="col-md-12">
            <h1>Listado de clientes</h1>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Nombre Compañía</th>
                        <th scope="col">Dirección</th>
                        <th scope="col">Teléfono</th>
                        <th scope="col">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr>
                            <td>@customer.ContactName</td>
                            <td>@customer.CompanyName</td>
                            <td>@customer.Address</td>
                            <td>@customer.Phone</td>
                            <td>
                                <button class="btn btn-danger delete-customer" data-customerid="@customer.CustomerID">
                                    ELIMINAR
                                </button>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @section Scripts {
        <script type="text/javascript">
        $(document).ready(function () {
            $(".delete-customer").click(function () {
                var id = $(this).data("customerid");
                if (confirm('¿Está seguro que desea borrar?')) {
                    $.ajax({
                        url: '@Url.Action("Delete", "Customers")',
                        type: 'POST',
                        data: { id: id },
                        success: function (result) {
                            if (result.success) {
                                $("#deleteSuccessAlert").show();
                                setTimeout(function () {
                                    $("#deleteErrorAlert").show();
                                    location.reload();
                                }, 1500);
                            } else {
                                $("#deleteErrorAlert").show();
                            }
                        },
                        error: function () {
                            $("#deleteErrorAlert").show();
                        }
                    });
                }
            });
        });
        </script>
    }
</div>

