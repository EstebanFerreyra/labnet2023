@model Lab.MVC.Models.CustomersView

@{
    ViewBag.Title = "Customers Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .container {
            max-width: 500px;
            margin: 0 auto;
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="container">
        <br />
        <h2 class="text-center">Nuevo cliente</h2>
        <br />
        @using (Html.BeginForm("Insert", "Customers", FormMethod.Post))
        {
            <div class="form-group">
                <label for="ContactName">Nombre:</label>
                @Html.TextBoxFor(r => r.ContactName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="CompanyName">Nombre compañia:</label>
                @Html.TextBoxFor(r => r.CompanyName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="Address">Dirección:</label>
                @Html.TextBoxFor(r => r.Address, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="Phone">Teléfono:</label>
                @Html.TextBoxFor(r => r.Phone, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-success">Guardar</button>
        }
    </div>
</body>
</html>
