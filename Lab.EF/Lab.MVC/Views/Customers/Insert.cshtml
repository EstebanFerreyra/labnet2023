@model Lab.MVC.Models.CustomersView

@{
    ViewBag.Title = "Customers Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .container {
            max-width: 500px;
            margin: 0 auto;
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="container">
        <br />
        <h2 class="text-center">Nuevo cliente</h2>
        <br />
        <div id="customAlert" class="alert alert-danger" style="display: none;">
            Por favor, complete todos los campos.
        </div>
        <div id="insertAlert" class="alert" style="display: none;"></div>

        @using (Html.BeginForm("Insert", "Customers", FormMethod.Post, new { id = "customerForm" }))
        {
            <div class="form-group">
                <label for="ContactName">Nombre:</label>
                @Html.TextBoxFor(r => r.ContactName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="CompanyName">Nombre compañia:</label>
                @Html.TextBoxFor(r => r.CompanyName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="Address">Dirección:</label>
                @Html.TextBoxFor(r => r.Address, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="Phone">Teléfono:</label>
                @Html.TextBoxFor(r => r.Phone, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-success">Guardar</button>
        }
    </div>
    @section Scripts {
        <script type="text/javascript">
        $(document).ready(function () {
            $("#customerForm").submit(function (event) {
                var contactName = $("#ContactName").val();
                var companyName = $("#CompanyName").val();
                var address = $("#Address").val();
                var phone = $("#Phone").val();

                if (contactName === "" || companyName === "" || address === "" || phone === "") {
                    $("#customAlert").show();
                    event.preventDefault();
                } else {
                    $("#customAlert").hide();
                }
            });

            $("#customerForm").on("submit", function (event) {
                event.preventDefault();

                $.ajax({
                    url: '@Url.Action("Insert", "Customers")',
                    type: 'POST',
                    data: $("#customerForm").serialize(),
                    success: function (result) {
                        if (result.success) {
                            $("#insertAlert").removeClass("alert-danger").addClass("alert-success");
                            $("#insertAlert").text("Cliente guardado con éxito.").show();

                            setTimeout(function () {
                                $("#insertAlert").hide();
                                window.location.href = '@Url.Action("Index", "Customers")';
                            }, 3000);
                        } else {
                            $("#insertAlert").removeClass("alert-success").addClass("alert-danger");
                            $("#insertAlert").text("Error al insertar el cliente.").show();
                        }
                    },
                    error: function () {
                        $("#insertAlert").removeClass("alert-success").addClass("alert-danger");
                        $("#insertAlert").text("Error al insertar el cliente.").show();
                    }
                });
            });
        });
        </script>
    }
</body>
</html>
